---
import { Picture } from "astro:assets";
import logoRPG from "@/assets/images/stats.png";
import logoSURVI from "@/assets/images/store.png";
import ArrowRight from "@/assets/icons/ArrowRight.svg";
---

<div class="container">
  <div class="container-title">
    <h1 transition:name="title">Selecciona tu modalidad</h1>
    <h2>
      Elige entre diferentes modalidades para visualizar tus estad√≠sticas y los
      rankings
    </h2>
  </div>

  <div class="select-mode">
    <div class="select-container">
      <h3>Survival RPG</h3>
      <p>
        Explora los rankings en diferentes tipos como kills, KD ratio, rachas,
        ELO, niveles y King of the Hill.
      </p>
      <Picture
        src={logoRPG}
        alt="Modalidad Survival RPG"
        priority
        layout="constrained"
      />

      <div class="more-details">
        <span>Ver mas detalles</span>
        <div>
          <a class="link" href="/ranking/rpg/kills"
            >Ingresar
            <ArrowRight width={16} height={16} />
          </a>
        </div>
      </div>
    </div>
    <div class="select-container">
      <h3>Survival 1.21.6</h3>
      <p>
        Explora los rankings en diferentes tipos como kills, KD ratio, rachas,
        ELO, niveles y King of the Hill.
      </p>
      <Picture src={logoSURVI} alt="Modalidad Survival 1.21.6" priority layout="constrained" />

      <div class="more-details">
        <span>Ver mas detalles</span>
        <div>
          <a class="link" href="/ranking/survival/kills"
            >Ingresar
            <ArrowRight width={16} height={16} />
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .container {
    display: flex;
    flex-direction: column;
    padding-left: 1rem;
    padding-right: 1rem;
    gap: 1.5rem;
    max-width: 1440px;

    @media (width > 1024px) {
      gap: 0;
    }
  }

  .container-title {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .select-mode {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;

    @media (width > 1024px) {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      border-bottom-width: 1px;
      border-bottom-color: var(--color-divider);
      border-bottom-style: solid;
      flex-grow: 1;
      align-items: center;
    }

    & > div:first-child {
      @media (width > 1024px) {
        border-right-width: 1px;
        border-right-color: var(--color-divider);
        border-right-style: solid;
      }
    }

    .select-container {
      display: flex;
      flex-direction: column;
      justify-content: center;

      @media (width > 1024px) {
        padding: 3rem;
      }
    }

    & h3 {
      font-size: var(--fs-lg);
    }
    & p {
      margin-top: 0.5rem;
      max-width: 50ch;
      font-size: var(--fs-sm);
      color: var(--color-opacity);
    }
  }

  h1 {
    font-family: "Clash";
    font-size: var(--fs-lg);
    font-weight: 600;
    letter-spacing: 0;

    @media (width > 1024px) {
      display: flex;
      font-size: var(--fs-xxl);
    }
  }

  h2 {
    font-family: "Inter";
    font-size: var(--fs-sm);
    font-weight: 400;
    background: linear-gradient(
      100deg,
      #f4c587,
      #d6d3e9 60.42%,
      #99d2ec 95.31%
    );
    background-clip: text;
    color: transparent;
    text-align: center;

    @media (width > 1024px) {
      display: flex;
      font-size: var(--fs-md);
    }

    @media (width < 450px) {
      max-width: 45ch;
      text-align: center;
    }
  }

  img {
    margin-top: 1.5rem;
    border-radius: 1rem;
  }

  .more-details {
    display: flex;
    margin-top: 1.5rem;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    .link {
      display: flex;
      color: white;
      justify-content: center;
      align-items: center;
      gap: 0.5rem;
      font-family: "Clash";
      font-weight: 500;
      font-size: var(--fs-sm);
      background-color: var(--resalt);
      border: 0;
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
      padding-right: 1.5rem;
      padding-left: 1.5rem;
      border-radius: 1rem;
      cursor: pointer;

      &:hover {
        background-color: var(--resalt);
        opacity: 0.9;
      }
    }

    & span {
      font-size: var(--fs-sm);
      text-decoration: underline;
      cursor: pointer;
      color: var(--color-opacity);
      transition: color 150ms ease-in-out;

      &:hover {
        color: var(--resalt);
      }
    }
  }
</style>
