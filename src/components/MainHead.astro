---
import "@/styles/global.css";
import { SEO } from "astro-seo";

interface Props {
  title?: string;
  description?: string;
  canonicalUrl?: string;
}

const {
  title = "Estadísticas - Hera Network",
  description = "Estadísticas y rankings en Hera Network. Consulta kills, KD ratio, ELO, niveles y King of the Hill en Survival RPG y Survival 1.21.6. Top jugadores, leaderboards detalladas de Minecraft.",
  canonicalUrl = Astro.url.href,
} = Astro.props;

const seoKeywords =
  "estadísticas minecraft, ranking heranetwork, kills minecraft, KD ratio, ELO ranking, king of the hill, survival rpg, survival 1.21.6, top jugadores minecraft, leaderboard minecraft, estadísticas jugadores, heramc.net, heranetwork stats";

---

<SEO
  title={title}
  description={description}
  canonical={canonicalUrl}
  extend={{
    meta: [
      { name: "keywords", content: seoKeywords },
      { name: "author", content: "stephanofer" },
    ],
  }}
/>

