---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import logoImage from "@/assets/images/heranetwork.png";

export const prerender = true;
---

<BaseLayout title="P치gina no encontrada - Hera Network">
  <main class="error-container">
    <div class="error-content">
      <Image src={logoImage} alt="Hera Network Logo" width={120} height={120} class="error-logo" />
      <h1>404</h1>
      <h2>P치gina no encontrada</h2>
      <p>
        Lo sentimos, la p치gina que est치s buscando no existe o ha sido movida.
      </p>
      <div class="error-actions">
        <a href="/" class="error-button">Volver al inicio</a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 200px);
    padding: 2rem;
    text-align: center;
  }

  .error-content {
    max-width: 600px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2.5rem;
    border-radius: 12px;
    background-color: #1a1a2e;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }

  .error-logo {
    margin-bottom: 1.5rem;
  }

  h1 {
    font-family: "Clash", sans-serif;
    font-size: var(--fs-xxxl);
    font-weight: 700;
    color: var(--resalt);
    margin: 0;
    line-height: 1;
  }

  h2 {
    font-family: "Clash", sans-serif;
    font-size: var(--fs-xl);
    margin: 0.5rem 0 1.5rem;
    color: #ffffff;
  }

  p {
    font-size: var(--fs-md);
    color: var(--color-opacity);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .error-actions {
    margin-top: 1rem;
  }

  .error-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    background-color: var(--resalt);
    color: white;
    font-weight: 600;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .error-button:hover {
    background-color: rgb(0, 112, 200);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }
</style>
